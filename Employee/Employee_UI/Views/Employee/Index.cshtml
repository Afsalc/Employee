@model IEnumerable<Employee_API.Models.MasterEmployee>

@{
    ViewData["Title"] = "Index";
}
<div class="card mt-3">
    <div class="card-header">
        <h5 class="card-title text-success align-middle">List of Employee<a class="btn btn-sm btn-success float-right" asp-action="Entry"> + Add New</a></h5>
    </div>
    <div class="card-body">
        <table id="tblEmployee" class="table table-striped table-bordered table-sm " cellspacing="0"
               width="100%">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        Telephone
                    </th>
                    <th>
                        Desigination
                    </th>
                    <th>
                        DOB
                    </th>

                </tr>
            </thead>
            <tbody id="tblEmployeeContent">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Entry" asp-route-id="@item.PkempId"><i class="icon icon-pencil">Edit</i></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeePhonenumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeDesigination)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeDob)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblEmployee').DataTable({
                dom: 'fBrtip',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'print'
                ],
                "scrollX": true,
                "scrollY": 380,
            });
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}

